<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<h2><%= @list.name %></h2>
<%= link_to "Add movie",  new_list_bookmark_path(@list), class: 'btn btn-warning' %>
<%= link_to "Back", lists_path, class: 'btn btn-warning' %>


<ul style="list-style: none">
  <% @list.movies.each do |movie| %>
  <li><%= image_tag movie.poster_url, alt: "Poster #{movie.title}", width: 500 %></li>
  <li style="font-weight: bold"><%=  movie.title %></li>
  <li><%= movie.overview %></li>
  <%= link_to 'delete this list', list_path(movie), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
  <% end %>
</ul>

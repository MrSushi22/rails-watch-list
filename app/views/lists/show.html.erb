<h1></h1>
<p></p>
<h2><%= @list.name %></h2>
<%= link_to "Arrr!",  new_list_bookmark_path(@list), class: 'btn btn-warning' %>
<%= link_to "RETREAT", lists_path, class: 'btn btn-warning' %>


<ul style="list-style: none">
  <% @list.bookmarks.each do |bookmark| %>
  <li><%= image_tag bookmark.movie.poster_url, alt: "Poster #{bookmark.movie.title}", width: 500 %></li>
  <li style="font-weight: bold"><%=  bookmark.movie.title %></li>
  <li><%= bookmark.movie.overview %></li>
  <li><%= bookmark.comment %></li>


  <li><%= link_to "Delete movie", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }%></li>
  <% end %>
</ul>
